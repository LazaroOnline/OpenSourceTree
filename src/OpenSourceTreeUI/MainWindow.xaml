<Window x:Class="OpenSourceTreeUI.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:OpenSourceTreeUI"
		Icon="/icon.png"
		mc:Ignorable="d"
		Title="MainWindow" Height="260" Width="950">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="30" />
			<RowDefinition Height="70" />
			<RowDefinition Height="70" />
			<RowDefinition Height="*"  />
		</Grid.RowDefinitions>
		<Label     Grid.Row="0" Margin="10,0,10,0" FontSize="18" VerticalAlignment="Bottom">Repo Path:</Label>
		<TextBox   Grid.Row="1" Margin="10" FontSize="16" x:Name="TxtRepoPath" VerticalContentAlignment="Center">C:\your-local-repo-folder-here</TextBox>
		<Button    Grid.Row="2" Margin="10" FontSize="24" Click="Button_Click">Open in SourceTree</Button>
		<ScrollViewer  Grid.Row="3" Margin="5" >
			<TextBlock Margin="5" x:Name="TxtLog" />
		</ScrollViewer>
	</Grid>
</Window>
